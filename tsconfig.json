{
  "compilerOptions": {
    "isolatedModules": true,
    "types": [
      "vite/client",
      "vue"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "resources/js/*"
      ],
      "ziggy-js": [
        "./vendor/tightenco/ziggy"
      ]
    }
  }
}
